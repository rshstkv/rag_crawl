# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Azure OpenAI Deployments (ваши deployment names в Azure)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-depl
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada

# Azure OpenAI Models (стандартные имена моделей OpenAI)
AZURE_OPENAI_CHAT_MODEL=gpt-4o
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Database Configuration
DATABASE_URL=postgresql://rag_user:rag_password@localhost:5432/rag_crawl

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# Application Configuration
LOG_LEVEL=INFO
MAX_CHUNK_SIZE=1024
CHUNK_OVERLAP=200
MAX_RETRIEVAL_RESULTS=3
MAX_FILE_SIZE_MB=100

# FastAPI Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# Gradio Configuration
GRADIO_SHARE=false
GRADIO_DEBUG=true
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Security (change in production)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 